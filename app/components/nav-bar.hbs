<header>
  <LinkTo class="nav-bar-logo" style={{html-safe "background-image: url(http://localhost:4200/images/black.svg)"}}
  @route="index"/>
  <div class="nav-menu">
  {{#each this.menus as |menu|}}
    <LinkTo class="nav-bar-link" @route={{menu.route}}>
        {{menu.title}}
        {{#if menu.isDropDown}}
        <svg xmlns="http://www.w3.org/2000/svg" height="20" viewBox="0 0 20 20" width="20"><path clip-rule="evenodd" d="m10.2 10.4 2.9-2.8 1.4 1.4-4.3 4.2-4.2-4.2 1.4-1.4z" fill-rule="evenodd"></path></svg>
        {{/if}}
    </LinkTo>
  {{/each}}
  <div class="nav-bar-separator"></div>
  <div class="nav-bar-auth">
    {{#if this.isAuthenticated}}
    <LinkTo class="button button-ghost" @route="app">My Account</LinkTo>
    {{else}}
    <LinkTo class="nav-bar-auth-link" @route="login">Log In</LinkTo>
    <LinkTo class="button" @route="sign-up">Sign Up</LinkTo>
    {{/if}}
  </div>
  </div>
</header>